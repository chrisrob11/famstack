{
  "name": "famstack-components",
  "version": "1.0.0",
  "description": "TypeScript components for Fam-Stack family task management",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "build:watch": "tsc --watch",
    "copy-assets": "mkdir -p ../static/js && cp -r dist/* ../static/js/ && cp -r src/* ../static/js/",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist && rm -rf ../static/js/*.js && rm -rf ../static/js/*.js.map"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/sortablejs": "^1.15.8",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/sanitize-html": "^2.16.0",
    "sanitize-html": "^2.17.0",
    "sortablejs": "^1.15.0"
  },
  "keywords": [
    "typescript",
    "family",
    "task-management",
    "htmx",
    "components"
  ],
  "author": "Fam-Stack Contributors",
  "license": "MIT"
}
