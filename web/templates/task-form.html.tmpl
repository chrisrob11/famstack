<div id="add-task-{{.UserID}}" class="add-task-form">
	<form hx-post="/api/tasks" 
		  hx-target="#task-list-{{.UserID}}" 
		  hx-swap="afterbegin"
		  hx-on::after-request="this.closest('.add-task-form').innerHTML = '<button class=\'add-task-btn\' hx-get=\'/api/tasks/new?user_id={{.UserID}}\' hx-target=\'#add-task-{{.UserID}}\' hx-swap=\'outerHTML\'>+ Add Task</button>'">
		<input type="hidden" name="assigned_to" value="{{.UserID}}">
		<input type="text" name="title" placeholder="Task title..." class="task-title-input" required autofocus>
		<div class="form-actions">
			<button type="submit" class="btn-save">Add</button>
			<button type="button" class="btn-cancel" 
					hx-get="/api/tasks/cancel?user_id={{.UserID}}" 
					hx-target="#add-task-{{.UserID}}" 
					hx-swap="outerHTML">Cancel</button>
		</div>
	</form>
</div>